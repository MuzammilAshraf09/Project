@{
    ViewData["Title"] = "Categories";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }

        .btn-custom {
            background-color: #f00;
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #c00;
            }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Categories</h1>
        </div>
    </header>

    <!-- Categories Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Category List</h2>
            <div class="row">
                <!-- Static Category Items -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="~/images/category1.jpeg" class="card-img-top" alt="Category 1" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Category 1</h5>
                            <a href="/Category/Details" class="btn btn-custom mb-2">Details</a>
                            <a href="/Category/Delete" class="btn btn-danger mb-2">Delete</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="~/images/category2.jpeg" class="card-img-top" alt="Category 2" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Category 2</h5>
                            <a href="/Category/Details" class="btn btn-custom mb-2">Details</a>
                            <a href="/Category/Delete" class="btn btn-danger mb-2">Delete</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="~/images/category3.jpeg" class="card-img-top" alt="Category 3" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">Category 3</h5>
                            <a href="/Category/Details" class="btn btn-custom mb-2">Details</a>
                            <a href="/Category/Delete" class="btn btn-danger mb-2">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Create Category Button -->
            <div class="text-center mt-4">
                <a href="/Category/Create" class="btn btn-primary">Create New Category</a>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
