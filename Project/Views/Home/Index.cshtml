@{
    ViewData["Title"] = "Discover Stores";
    var isLoggedIn = ViewData["IsLoggedIn"] as bool? ?? false;
    var username = ViewData["Username"] as string ?? string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .navbar, .footer {
            background-color: #333;
        }

        .navbar-brand, .nav-link {
            color: #fff;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #c00;
            }

        .btn-primary {
            background-color: #f00;
            border: none;
        }

            .btn-primary:hover {
                background-color: #c00;
            }

        .btn {
            background-color: #f00; /* Default button color */
            border: none;
            color: #fff;
        }

            .btn:hover {
                background-color: #c00; /* Button hover color */
                color: #fff;
            }

        .btn-outline-light {
            border-color: #f00;
            color: #fff;
        }

            .btn-outline-light:hover {
                background-color: #f00;
                border-color: #f00;
                color: #fff;
            }

        .dropdown-menu {
            background-color: #333;
            border: none;
        }

        .dropdown-item {
            color: #fff;
        }

            .dropdown-item:hover {
                background-color: #f00;
                color: #fff;
            }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-text, .card-footer, .footer a {
            color: #fff;
        }

        .footer {
            padding: 20px 0;
        }

            .footer a:hover {
                color: #c00;
            }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }

        .banner-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 400px; /* Set the height for centering */
            overflow: hidden;
            margin: 0 auto; /* Center the wrapper itself */
        }

        .banner-image {
            width: 100%;
            max-width: 900px;
            height: 400px;
            object-fit: cover;
            border-radius: 20px;
        }

        .card-img-top {
            width: 350px; /* Set the width */
            height: 235px; /* Set the height */
            object-fit: cover; /* Ensures the image covers the area without stretching */
            border-radius: 5px; /* Optional: rounded corners */
        }
    </style>

</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">DISCOVER STORES</h1>
            <div>
                @if (!isLoggedIn)
                {
                    <!-- Buyer and Seller buttons -->
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-light dropdown-toggle me-2" data-bs-toggle="dropdown" aria-expanded="false">
                            Buyer
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/User/Login">Login</a></li>
                            <li><a class="dropdown-item" href="/User/SignUp">Sign Up</a></li>
                        </ul>

                        <button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Seller
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Admin/Login">Login</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <span class="text-light">Welcome, @username!</span>
                    <a href="@(username == "Admin" ? "/Admin/Logout" : "/User/Logout")" class="btn btn-danger ms-2">Logout</a>
                }
            </div>
        </div>


        <div class="banner-wrapper mt-4">
            <img src="~/images/banner.webp" class="banner-image img-fluid" alt="Store Banner">
        </div>
        <div class="input-group my-4 w-50 mx-auto">
            <input type="text" class="form-control" placeholder="Search for stores...">
            <button class="btn btn-danger">Search</button>
