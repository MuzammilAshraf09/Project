@model IEnumerable<Project.Models.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Orders</h1>
        </div>
    </header>
    <a href="/User/Index" class="btn btn-primary">Go to Home</a>
    <!-- Orders Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Order List</h2>
            <div class="d-flex mb-3">
                <a href="/Order/Create" class="btn btn-danger">Create New Order</a>
            

            </div>
            <div class="row">
                @foreach (var order in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Order @order.Id</h5>
                                <p class="card-text">Order Date: @order.OrderDate.ToString("MMMM d, yyyy")</p>
                                <a href="/Order/Details/@order.Id" class="btn btn-primary">Details</a>
                                <a href="/Order/Delete/@order.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
