@model Project.Models.Entities.Order
@{
    ViewData["Title"] = "Create Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Create Order</h1>
        </div>
    </header>

    <!-- Create Order Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Create New Order</h2>
            <form action="/Order/Create" method="post">
                <div class="mb-3">
                    <label for="orderDate" class="form-label">Order Date</label>
                    <input type="date" class="form-control" id="orderDate" name="OrderDate" required>
                </div>
                <div class="mb-3">
                    <label for="userId" class="form-label">User ID</label>
                    <input type="number" class="form-control" id="userId" name="UserId" required>
                </div>
                <button type="submit" class="btn btn-danger">Create Order</button>
            </form>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

