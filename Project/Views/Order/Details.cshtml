@model Project.Models.Entities.Order
@{
    ViewData["Title"] = "Order Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Order Details</h1>
        </div>
    </header>

    <!-- Order Details Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Order Details</h2>
            <div class="card mb-4">
                <div class="card-body">
                    <!-- Displaying Order Details -->
                    <h5 class="card-title">Order ID: @Model.Id</h5>
                    <p class="card-text">Order Date: @Model.OrderDate.ToString("MMMM d, yyyy")</p>
                    <p class="card-text">User ID: @Model.UserId</p>
                    <!-- Edit Button with dynamic Order ID -->
                    <a href="/Order/Edit/@Model.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
