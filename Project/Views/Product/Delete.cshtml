@model Project.Models.Entities.Product

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Delete Product</h1>
        </div>
    </header>

    <!-- Delete Product Section -->
    <section class="py-5">
        <div class="container">
            <div class="card mb-4">
                <div class="card-body">
                    <p>Are you sure you want to delete the product with ID: <strong>@Model.Id</strong>?</p>
                    <form asp-action="Delete" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="/Product/Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
