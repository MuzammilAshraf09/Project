@model IEnumerable<Project.Models.Entities.Product>

@{
    ViewData["Title"] = "Products";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Products</h1>
            <div>
                <a href="/Product/Create" class="btn btn-primary">Create New Product</a>
                <button onclick="history.back()" class="btn btn-secondary">Back</button>
            </div>
        </div>
    </header>

    <!-- Products List Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Product List</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@Url.Content($"~/images/{product.ImageUrl}")" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <a href="/Product/Details/@product.Id" class="btn btn-info">Details</a>
                                <a href="/Product/Update/@product.Id" class="btn btn-warning">Update</a>
                                <a href="/Product/Delete/@product.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
