@model Project.Models.Entities.Product

@{
    ViewData["Title"] = "Edit Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Edit Product</h1>
            <a href="/Product/Index" class="btn btn-secondary">Back to List</a>
        </div>
    </header>

    <!-- Edit Product Form Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Update Product Information</h2>
            <form asp-action="Update" method="post">
                <div class="mb-3">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="productName" name="Name" value="@Model.Name">
                </div>
                <div class="mb-3">
                    <label for="productDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="productDescription" name="Description" rows="3">@Model.Description</textarea>
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Price</label>
                    <input type="number" step="0.01" class="form-control" id="productPrice" name="Price" value="@Model.Price">
                </div>
                <div class="mb-3">
                    <label for="productImageUrl" class="form-label">Image URL</label>
                    <input type="text" class="form-control" id="productImageUrl" name="ImageUrl" value="@Model.ImageUrl">
                </div>
                <div class="mb-3">
                    <label for="categoryId" class="form-label">Category ID</label>
                    <input type="number" class="form-control" id="categoryId" name="CategoryId" value="@Model.CategoryId">
                </div>
                <input type="hidden" name="Id" value="@Model.Id"> <!-- Hidden field for ID -->
                <button type="submit" class="btn btn-primary">Update Product</button>
            </form>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
