@model IEnumerable<Project.Models.Entities.CartItems>

@{
    ViewData["Title"] = "Cart Items";
    var totalQuantity = Model.Sum(item => item.Quantity);
    var totalPrice = Model.Sum(item => item.Quantity * item.Product.Price); // Assuming `Product` has a `Price` property
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }

        .btn-custom {
            background-color: #f00;
            color: #fff;
            border: none;
        }

            .btn-custom:hover {
                background-color: #c00;
            }

        .price-slip {
            background-color: #333;
            padding: 1rem;
            border-radius: 0.5rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Cart Items</h1>
        </div>
    </header>

    <!-- Cart Items Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Your Cart</h2>
            <div class="row">
                <div class="container">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            Your cart is empty.
                        </div>
                    }
                    else
                    {
                        <!-- Existing code to display cart items -->
                    }
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <!-- Placeholder for product image, update with actual path or logic -->
                            <img src="~/images/placeholder.jpeg" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">Product ID: @item.ProductId</h5>
                                <p class="card-text">Quantity: @item.Quantity</p>
                                <p class="card-text">Price: @item.Product.Price</p> <!-- Assuming `Product` has a `Price` property -->
                                <a href="/CartItems/Details/@item.Id" class="btn btn-custom mb-2">Details</a>
                                <a href="/CartItems/Delete/@item.Id" class="btn btn-danger mb-2">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Price Slip -->
            <div class="price-slip mt-4">
                <h4>Total Products: @totalQuantity</h4>
                <h4>Total Price: @totalPrice</h4>
            </div>
            <!-- Place Order Button -->
            <div class="text-center mt-4">
                <a href="/Order/PlaceOrder" class="btn btn-success">Place Order</a>
            </div>
            <!-- Create Cart Item Button -->
            <div class="text-center mt-4">
                <a href="/CartItems/Create" class="btn btn-primary">Add New Item to Cart</a>
            </div>
            <!-- Back to Index Button -->
            <div class="text-center mt-4">
                <a href="/User/Index" class="btn btn-secondary">Back to Index</a>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
