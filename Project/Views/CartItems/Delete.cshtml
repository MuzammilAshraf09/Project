@model Project.Models.Entities.CartItems

@{
    ViewData["Title"] = "Delete Cart Item";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #212121;
            color: #fff;
        }

        .card {
            background-color: #444;
            border: 1px solid #555;
        }

        .card-title, .card-footer {
            color: #fff;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="container-fluid bg-dark text-center py-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5">Delete Cart Item</h1>
        </div>
    </header>

    <!-- Delete Cart Item Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="section-title">Confirm Deletion</h2><a href="d:\semester 6\web\project\project\views\cartitems\delete.cshtml">d:\semester 6\web\project\project\views\cartitems\delete.cshtml</a>
            <form asp-action="DeleteConfirmed" method="post">
                <div class="mb-3">
                    <label for="productName" class="form-label">Product Name</label>
                    <input type="text" class="form-control" id="productName" placeholder="Product Name" readonly>
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="quantity" placeholder="Quantity" readonly>
                </div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/CartItems/Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
